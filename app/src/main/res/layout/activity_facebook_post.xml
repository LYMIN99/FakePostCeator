<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@android:color/white">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="60dp">
        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Post Creator"
                android:textSize="25sp"
                android:textStyle="bold"
                android:elevation="5dp"
                android:layout_margin="10dp"
                android:layout_gravity="center_horizontal"
                android:shadowColor="@android:color/black"
                android:textColor="@color/colorPrimary"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@android:color/black"
                android:textSize="15sp"
                android:text="Full name"/>

            <EditText
                android:id="@+id/ed_name"
                android:layout_marginTop="10dp"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:hint="username"
                android:gravity="center"
                android:elevation="5dp"
                android:textSize="15sp"
                android:background="@drawable/btn_rounded_grey_outline"/>

            <TextView
                android:layout_marginTop="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@android:color/black"
                android:textSize="15sp"
                android:text="Choose Profile Picture"/>

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/image_profile"
                android:layout_marginTop="10dp"
                android:layout_width="150dp"
                android:layout_height="150dp"
                app:civ_border_width="2dp"
                app:civ_border_color="@color/colorPrimary"
                android:elevation="5dp"
                android:src="@drawable/profile"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@android:color/black"
                android:textSize="15sp"
                android:layout_marginTop="15dp"
                android:text="@string/likes_reactions"/>

            <LinearLayout
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal">
                <EditText
                    android:id="@+id/ed_likes"
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:hint="Likes"
                    android:text="1"
                    android:inputType="number"
                    android:gravity="center"
                    android:textSize="15sp"
                    android:elevation="5dp"
                    android:background="@drawable/btn_rounded_grey_outline"/>
                <ImageView
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_marginEnd="10dp"
                    android:src="@drawable/liekk"
                    app:tint="@color/colorPrimary" />

                <EditText
                    android:id="@+id/ed_cmt"
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:hint="Likes"
                    android:text="1"
                    android:inputType="number"
                    android:gravity="center"
                    android:textSize="15sp"
                    android:elevation="5dp"
                    android:background="@drawable/btn_rounded_grey_outline"/>
                <ImageView
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_marginEnd="10dp"
                    app:tint="@color/colorPrimary"
                    android:src="@drawable/commeent"/>

                <EditText
                    android:id="@+id/ed_share"
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:hint="Likes"
                    android:text="1"
                    android:inputType="number"
                    android:gravity="center"
                    android:textSize="15sp"
                    android:elevation="5dp"
                    android:background="@drawable/btn_rounded_grey_outline"/>
                <ImageView
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_marginEnd="10dp"
                    app:tint="@color/colorPrimary"
                    android:src="@drawable/sharrr"/>


            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@android:color/black"
                android:textSize="15sp"
                android:layout_marginTop="15dp"
                android:text="Date"/>

            <EditText
                android:id="@+id/tv_date"
                android:layout_marginTop="10dp"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:text="just now"
                android:textSize="15sp"
                android:gravity="center"
                android:elevation="5dp"
                android:paddingHorizontal="15dp"
                android:background="@drawable/btn_rounded_grey_outline" />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@android:color/black"
                android:textSize="15sp"
                android:layout_marginTop="15dp"
                android:text="Description"/>

            <EditText
                android:id="@+id/ed_descrption"
                android:layout_marginTop="10dp"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:hint="Description"
                android:textSize="15sp"
                android:gravity="center"
                android:elevation="5dp"
                android:paddingHorizontal="15dp"
                android:background="@drawable/btn_rounded_grey_outline" />

            <Button
                android:id="@+id/btn_create"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom|center_horizontal"
                android:text="Create Post"
                android:textSize="14sp"
                android:textAppearance="@style/TextAppearance.AppCompat.Caption"
                android:textColor="@android:color/white"
                android:layout_margin="10dp"
                android:background="@drawable/edit_rounded_primary"/>

        </LinearLayout>
    </ScrollView>
    <ImageButton
            android:id="@+id/btn_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="?selectableItemBackgroundBorderless"
            android:padding="10dp"
            android:layout_margin="5dp"
            android:src="@drawable/ic_round_arrow_back_ios_24"/>

     <com.google.android.gms.ads.AdView
            xmlns:ads="http://schemas.android.com/apk/res-auto"
            android:id="@+id/adView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|center"
            ads:adSize="BANNER"
            ads:adUnitId="@string/ad_banner_id">
        </com.google.android.gms.ads.AdView>
</androidx.coordinatorlayout.widget.CoordinatorLayout>

</layout>