<?xml version="1.0" encoding="utf-8"?>
<layout>

    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorPrimary">
        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="?selectableItemBackgroundBorderless"
            android:padding="10dp"
            android:tint="@android:color/white"
            android:layout_margin="5dp"
            android:src="@drawable/ic_round_arrow_back_ios_24"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Post Created"
            android:layout_marginBottom="25dp"
            android:textSize="25sp"
            android:textStyle="bold"
            android:layout_gravity="center_horizontal"
            android:textColor="@android:color/white"/>
        <LinearLayout
            android:id="@+id/layout_post"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/white"
            android:paddingHorizontal="10dp"
            android:paddingTop="10dp"
            android:orientation="vertical">

            <LinearLayout

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <RelativeLayout
                    android:layout_width="50dp"
                    android:layout_height="50dp">

                    <de.hdodenhof.circleimageview.CircleImageView
                        android:id="@+id/image_profile"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        app:civ_border_width="2dp"
                        app:civ_border_color="@color/colorPrimary"
                        android:background="@drawable/circle_shape_white"
                        android:backgroundTint="@android:color/white"
                        android:src="@drawable/profile"/>
                    <ImageView
                        android:id="@+id/img_online"
                        android:layout_width="15dp"
                        android:layout_height="15dp"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentBottom="true"
                        android:padding="1dp"
                        android:background="@drawable/circle_shape_white"
                        android:src="@drawable/dot"
                        app:tint="@color/green_500" />
                </RelativeLayout>
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginStart="10dp"
                    android:orientation="vertical">
                    <TextView
                        android:id="@+id/tv_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textStyle="bold"
                        android:textColor="@android:color/black"
                        android:textSize="15sp"
                        android:layout_marginBottom="5dp"
                        android:text="Emo Composer"/>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">
                        <TextView
                            android:id="@+id/tv_date"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/grey_800"
                            android:textSize="14sp"
                            android:text="15 h . "/>

                        <ImageView
                            android:id="@+id/img_public"
                            android:layout_width="15dp"
                            android:layout_height="15sp"
                            android:src="@drawable/ic_round_public_24"/>
                    </LinearLayout>

                </LinearLayout>
                <ImageButton
                    android:id="@+id/btn_more"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@android:color/transparent"
                    android:src="@drawable/ic_round_more_horiz_24" />
            </LinearLayout>

            <TextView
                android:id="@+id/tv_descrption"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/grey_800"
                android:layout_marginVertical="10dp"
                android:text="Hello everyone I miss u so\nOkay tomorrow fight."/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:paddingVertical="10dp"
                android:orientation="horizontal">
                <ImageView
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:src="@drawable/likee"/>
                <TextView
                    android:id="@+id/tv_likes"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:text="1.2k"/>

                <TextView
                    android:id="@+id/tv_comments"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="2 comments ."/>
                <TextView
                    android:id="@+id/tv_shares"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="10 shares"/>

            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/grey_10"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:paddingVertical="10dp"
                android:orientation="horizontal">

                <View
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_weight="1"/>
                <ImageButton
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:scaleType="fitXY"
                    android:tint="@color/grey_600"
                    android:src="@drawable/liekk"
                    android:layout_marginEnd="5dp"
                    android:background="@android:color/transparent"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Like"/>
                <View
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_weight="1"/>
                <ImageButton
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:scaleType="fitXY"
                    android:tint="@color/grey_600"
                    android:src="@drawable/commeent"
                    android:layout_marginEnd="5dp"
                    android:background="@android:color/transparent"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Comments"/>
                <View
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_weight="1"/>
                <ImageButton
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:tint="@color/grey_600"
                    android:src="@drawable/sharrr"
                    android:scaleType="fitXY"
                    android:layout_marginEnd="5dp"
                    android:background="@android:color/transparent"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Shares"/>
                <View
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_weight="1"/>
            </LinearLayout>
        </LinearLayout>

        <Button
            android:id="@+id/btn_share"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/edit_rounded_primary"
            android:backgroundTint="@android:color/white"
            android:elevation="5dp"
            android:textAppearance="@style/TextAppearance.AppCompat.Body2"
            android:layout_margin="15dp"
            android:text="Share now"/>
        <Button
            android:id="@+id/btn_rate"
            android:visibility="gone"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/edit_rounded_primary"
            android:backgroundTint="@android:color/white"
            android:elevation="5dp"
            android:textAppearance="@style/TextAppearance.AppCompat.Body2"
            android:text="Rate app"/>

    </LinearLayout>

</layout>